{
    "name": "nimp/link-loom",
    "authors": [
      {
        "name": "Yehor Konopka"
      }
    ],
    "description": "This package provides a PHP URL Shortener Library",
    "type": "library",
    "require": {
        "php": "^8.3",
        "monolog/monolog": "3.*",
        "psr/container": "2.*",
        "psr/event-dispatcher": "1.*",
        "nimp/link-loom-core": "1.*",
        "nimp/observer": "1.*",
        "ext-mbstring": "*",
        "ext-redis": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nimp\\LinkLoom\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Nimp\\LinkLoom\\Tests\\": "tests/"
      }
    },
    "require-dev": {
      "phpunit/phpunit": "^11.2",
      "phpstan/phpstan": "^2.1"
    },
    "scripts": {
      "test": "phpunit --colors=always",
      "test-coverage": "phpunit --coverage-html coverage",
      "phpstan": "phpstan analyse src tests --level=8",
      "phpstan-ci": "phpstan analyse src tests --level=8 --error-format=github",
      "audit": "composer audit",
      "validate": "composer validate --strict"
    },
    "minimum-stability": "dev"
}
